<div class="row">
  <div class="release-header">
    <h1 class="small-12 large-8 small-centered"> New Release Form </h1>
  </div>
</div>
    <div class="row">
      <div class="small-12 large-8 small-centered">
      <%= form_for(@release) do |f| %>

      <% if @release.errors.any? %>
        <div id="error_explanation" class="callout warning">
          <h5><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h5>

          <ul class="no-bullet">
          <% @release.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="release-form">
        <div class="field">
          <%= f.label :title %> <br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :artist %> <br />
          <%= f.text_field :artist %>
        </div>
        <div class="field">
          <%= f.label :performer %> <br />
          <%= f.text_field :performer %>
        </div>
        <div class="field">
          <%= f.label :year %> <br />
          <%= f.text_field :year %>
        </div>
        <div class="field">
          <%= f.label :studio %> <br />
          <%= f.text_field :studio %>
        </div>
        <div class="field">
          <%= f.label :no_of_tracks %> <br />
          <%= f.text_field :no_of_tracks %>
        </div>
        <div class="field">
          <%= f.label :album_art_url %> <br />
          <%= f.text_field :album_art_url %>
        </div>

        <div class="field check-boxes">
          <% @genre_collection.map do |genre| %>
          <div class="check-box-and-label">
            <input type="checkbox" value="<%= genre.id %>" name="release[genre_ids][]" id="release_genre_ids_<%= genre.id %>">
            <label for="release_genre_ids_<%= genre.id %>"><%= genre.name %></label>
          </div>
          <% end %>
        </div>
        <br>
        <br>

        <div class="field">
          <%= f.label :description %> <br />
          <%= f.text_area :description, placeholder: "Optional"  %>
        </div>

        <div class="actions">
          <%= f.submit value="Add Release"%>
        </div>

        <% end %>
      </div>
    </div>
  </div>
