<h1> New Release Form </h1>

<%= form_for(@release) do |f| %>
  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %> <br />
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <%= f.label :performer %> <br />
    <%= f.text_field :performer %>
  </div>
  <div class="field">
    <%= f.label :year %> <br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :studio %> <br />
    <%= f.text_field :studio %>
  </div>
  <div class="field">
    <%= f.label :no_of_tracks %> <br />
    <%= f.text_field :no_of_tracks %>
  </div>
  <div class="field">
    <%= f.label :album_art_url %> <br />
    <%= f.text_field :album_art_url %>
  </div>

  <div class="actions">
    <%= f.submit value="Add Release"%>
  </div>
  <% end %>

<br>
